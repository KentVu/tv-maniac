#!/bin/sh

echo "Running spotlessApply..."
./gradlew spotlessApply --daemon

# Check if spotlessApply made any changes
if [ -n "$(git diff)" ]; then
  echo "ðŸ‘€ Spotless made changes. Staging the changes..."
  git add .
  echo "ðŸ§¹ Changes have been staged. Proceeding with commit."
fi

# Return 0 to allow the commit to proceed
exit 0
